[ironic]
url=<%= p("ironic_cpi.ironic_url") %>
<% if_p("ironic_cpi.ironic_auth_token") do %>
auth_token='<%= p("ironic_cpi.ironic_auth_token") %>'
<% end.else do %>
auth_username=<%= p("ironic_cpi.ironic_auth_username") %>
auth_password=<%= p("ironic_cpi.ironic_auth_password") %>
auth_url=<%= p("ironic_cpi.ironic_auth_url") %>
auth_domain=<%= p("ironic_cpi.ironic_auth_domain", "default") %>
<% if_p("ironic_cpi.ironic_project_name") do %>
project_name=<%= p("ironic_cpi.ironic_project_name") %>
<% end %>
<% if_p("ironic_cpi.ironic_region_name") do %>
region_name=<%= p("ironic_cpi.ironic_region_name") %>
<% end %>
<% end %>


[stemcell]
repository_type=<%= p("ironic_cpi.repostemcell_repository_type") %>
url=<%= p("ironic_cpi.repostemcell_url") %>
<% if_p("ironic_cpi.repostemcell_username") do %>
username=<%= p("ironic_cpi.repostemcell_username") %>"
password=<%= p("ironic_cpi.repostemcell_password") %>"
<% end %>


[metadata]
repository_type=<%= p("ironic_cpi.repometadata_repository_type") %>
url=<%= p("ironic_cpi.repometadata_url") %>
<% if_p("ironic_cpi.repometadata_username") do %>
username=<%= p("ironic_cpi.repometadata_username") %>"
password=<%= p("ironic_cpi.repometadata_password") %>"
<% end %>
