[loggers]
keys=root,ironic_cpi,CPIManager,Create_Stemcell,Delete_Stemcell,Create_VM,Delete_VM,Has_VM,Reboot_VM,Set_VM_Metadata,Create_Disk,Delete_Disk,Has_Disk,Attach_Disk,Detach_Disk,Get_Disks

[handlers]
keys=consoleHandler,file

[formatters]
keys=simpleFormatter,file

[logger_root]
level=DEBUG
handlers=file

[logger_ironic_cpi]
qualname=ironic_cpi
handlers=consoleHandler,file

[logger_Create_Stemcell]
qualname=Create_Stemcell
handlers=consoleHandler,file

[logger_Delete_Stemcell]
qualname=Delete_Stemcell
handlers=consoleHandler,file

[logger_Create_VM]
qualname=Create_VM
handlers=consoleHandler,file

[logger_Delete_VM]
qualname=Delete_VM
handlers=consoleHandler,file

[logger_Has_VM]
qualname=Has_VM
handlers=consoleHandler,file

[logger_Reboot_VM]
qualname=Reboot_VM
handlers=consoleHandler,file

[logger_Set_VM_Metadata]
qualname=Set_VM_Metadata
handlers=consoleHandler,file

[logger_Create_Disk]
qualname=Create_Disk
handlers=consoleHandler,file

[logger_Delete_Disk]
qualname=Delete_Disk
handlers=consoleHandler,file

[logger_Has_Disk]
qualname=Has_Disk
handlers=consoleHandler,file

[logger_Attach_Disk]
qualname=Attach_Disk
handlers=consoleHandler,file

[logger_Detach_Disk]
qualname=Detach_Disk
handlers=consoleHandler,file

[logger_Get_Disks]
qualname=Get_Disks
handlers=consoleHandler,file

[logger_CPIManager]
qualname=CPIManager
handlers=consoleHandler,file

[handler_file]
class=FileHandler
formatter=file
<% if_p('ironic_cpi.logging') do |log| %>
level=<%= log %>
args=('/var/vcap/sys/log/ironic_cpi/ironic_cpi.actions.log', 'w')
<% end.else do %>
level=ERROR
args=(os.devnull, 'w')
<% end %>

[handler_consoleHandler]
class=StreamHandler
level=INFO
formatter=simpleFormatter
args=(sys.stderr,)

[formatter_file]
format=%(asctime)s %(name)-12s %(levelname)-8s %(message)s

[formatter_simpleFormatter]
format=%(name)s: %(message)s

