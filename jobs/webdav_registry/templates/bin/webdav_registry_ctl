set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the ctl script
source /var/vcap/jobs/webdav_registry/helpers/ctl_setup.sh 'webdav_registry'

# Log some info to the Monit Log file
function log {
    local message=${1}
    local timestamp=`date +%y:%m:%d-%H:%M:%S`
    echo "${timestamp} :: ${message}" >> "/var/vcap/sys/log/monit/$JOB_NAME.log"
}

case $1 in
  start)
    log "Starting webdav_registry nginx"
    pid_guard $PIDFILE $JOB_NAME
    echo $$ > $PIDFILE
    ldconf $LD_LIBRARY_PATH
    exec chpst -u vcap:vcap "${JOB_DIR}/packages/nginx_lua/sbin/nginx" -g "pid $PIDFILE;" -c $CONFIG_FILE \
        >>$LOG_DIR/$JOB_NAME.stdout.log \
        2>>$LOG_DIR/$JOB_NAME.stderr.log
    ;;
  stop)
    log "Stopping webdav_registry nginx"
    kill_and_wait $PIDFILE
    ;;
  *)
    echo "Usage: webdav_registry {start|stop}"
    ;;
esac
exit 0
