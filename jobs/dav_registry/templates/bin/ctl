set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the ctl script
source /var/vcap/jobs/dav_registry/helpers/ctl_setup.sh 'dav_registry' 'nginx-lua'

# Create foldes to store the metadata (see registry vhost configuration) ...
for dir in "metadata"; do
  mkdir -p ${STORE_DIR}/${dir}
  chown vcap:vcap ${STORE_DIR}/${dir}
  chmod 775 ${STORE_DIR}/${dir}
done

TIMESTAMP=$(date +%y:%m:%d-%H:%M:%S)

# Control
case $1 in
  start)
    echo "$TIMESTAMP :: Starting dav_registry nginx-lua ..."
    pid_guard $PIDFILE $JOB_NAME
    ldconf $LD_LIBRARY_PATH
    exec chpst -u vcap:vcap /var/vcap/packages/nginx-lua/sbin/nginx \
    	-c /var/vcap/jobs/dav_registry/config/nginx.conf \
    >>$LOG_DIR/nginx-lua.stdout.log \
    2>>$LOG_DIR/nginx-lua.stderr.log
    ;;
  stop)
    echo "$TIMESTAMP :: Stopping davregistry nginx-lua ..."
    kill -QUIT $(head -1 $PIDFILE)
    sleep 5
    kill_and_wait $PIDFILE
    ;;
  reload)
    echo "$TIMESTAMP :: Reloading davregistry nginx-lua ..."
    kill -HUP $(head -1 $PIDFILE)
    ;;
  *)
    echo "Usage: nginx-lua {start|stop|reload}"
    ;;
esac
exit 0
